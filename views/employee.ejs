<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>My Employee Management App</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
      integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
      crossorigin="anonymous"
    />
    <!--  jQuery -->
    <script
      type="text/javascript"
      src="https://code.jquery.com/jquery-1.11.3.min.js"
    ></script>

    <!-- Bootstrap Date-Picker Plugin -->
    <script
      type="text/javascript"
      src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css"
    />
  </head>

  <body>
    <div class="container">
      <h1 align="center">My Employee Management App</h1>
      <div class="row shadow p-3 mb-5 bg-white rounded" style="padding: 20px">
        <div class="col-6">
          <h2>Add Employee</h2>
          <form method="post" action="/add">
            <div class="form-group">
              <label for="Name">Name</label>
              <input
                type="text"
                class="form-control"
                placeholder="Enter Your Name"
                name="Name"
              />
            </div>
            <div class="datepicker form-group">
              <label for="Zip">ZipCode</label>
              <input
                type="text"
                class="form-control"
                placeholder="Zip Code"
                name="Zip"
              />
            </div>
            <div class="form-group">
              <label for="Department">Department Name</label>
              <input
                type="text"
                class="form-control"
                placeholder="Department name"
                name="Department"
              />
            </div>
            <div class="form-group">
              <label for="age">Age</label>
              <input
                type="number"
                class="form-control"
                placeholder="Age"
                name="Age"
              />
            </div>
            <div class="form-group">
              <label for="Salary">Salary</label>
              <input
                type="number"
                class="form-control"
                placeholder="Salary"
                name="Salary"
              />
            </div>
            <button type="submit" class="btn btn-outline-primary btn-lg btn-block">Add Employee</>
          </form>
        </div>
        <div class="col-6" style="padding-top:10px">
          <div class="form-group" style="height:90%;">
            <label for="comment">OutPut :</label>
            <textarea class="form-control" 
            rows="10" style="height:100%;" disabled
            ><% if(locals.response) { %> <%= JSON.stringify(response) %> <% } %></textarea>
          </div>
        </div>
        </div>

        <div class="row shadow p-3 mb-5 bg-white rounded" style="padding-top: 10px">
        <div class="col-6" >
          <h2>Update Employee</h2>
          <form method="post" action="/update">
            <div class="form-group">
              <label for="_id">Employee _id</label>
              <input
                type="text"
                class="form-control"
                placeholder="Enter Employee _id"
                name="_id"
              />
            </div>
            <div class="form-group">
              <label for="Name">Name</label>
              <input
                type="text"
                class="form-control"
                placeholder="Enter First Name"
                name="Name"
              />
            </div>
            <div class="form-group">
              <label for="ZipCode">Zip Code</label>
              <input
                type="text"
                class="form-control"
                placeholder="Zip Code"
                name="Zip"
              />
            </div>
            <div class="form-group">
              <label for="Department">Department Name</label>
              <input
                type="text"
                class="form-control"
                placeholder="Department name"
                name="Department"
              />

              
            </div>
            <div class="form-group">
              <label for="Age">Age</label>
              <input
                type="number"
                class="form-control"
                placeholder="Age"
                name="Age"
              />
            </div>
            <div class="form-group">
              <label for="Salary">Salary</label>
              <input
                type="number"
                class="form-control"
                placeholder="Salary"
                name="Salary"
              />
            </div>
            <button type="submit" class="btn btn-outline-primary btn-lg btn-block">Update Employee</button>
          </form>
        </div>
        <div class="col-6" style="padding-top:10px">
          <div class="form-group" style="height:90%;">
            <label for="comment">OutPut Text:</label>
            <textarea class="form-control" 
            rows="10" style="height:100%;" disabled
            ><% if(locals.response) { %> <%= JSON.stringify(response) %> <% } %></textarea>
          </div>
        
        </div>
      </div>

<div class="row shadow p-3 mb-5 bg-white rounded" style="padding-top : 20px">
  <div class="col-12">
    <h2>Encrypt Employee Request</h2>
          <form method="post" action="/encrypt">
            <div class="form-group">
              <label for="usr">Key:</label>
              <input type="text" class="form-control" name="key">
            </div>
            <div class="form-group">
              <label for="comment">Request:</label>
              <textarea class="form-control" rows="5" name="plaintext"></textarea>
            </div>
            <div class="form-group">
              <label for="comment">Encrypted Text:</label>
              <textarea class="form-control" 
                rows="5"  disabled
              ><% if(locals.response) { %> <%= JSON.stringify(response) %> <% } %></textarea>
            </div>
            <button type="submit" class="btn btn-outline-primary btn-lg btn-block">Encrypt payload</button>
          </form>
  </div>
</div>
     
      <div style="padding-top: 5%; padding-bottom: 5%">
        <% if(locals.messages) { %>
        <h4 align="center">Error</h4>
        <ul>
          <%= messages %>
        </ul>
        <% } %>
    </div>
    
  </body>
</html>
